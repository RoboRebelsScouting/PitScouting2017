<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elmhursts20.pitscoutingapp2017.SecondActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ball Capacity:"
        android:textSize="30sp"
        android:layout_row="1"
        android:layout_column="0"
        android:textColor="@android:color/background_dark" />
    <TextView
        android:layout_width="183dp"
        android:layout_height="40dp"
        android:text="Footprint:"
        android:textSize="30sp"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textAlignment="viewStart"
        android:text="Gear:"
        android:textSize="30sp"
        android:layout_row="6"
        android:layout_column="0"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/robotWeight"
        android:inputType="number"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="Robot Weight"
        android:layout_row="0"
        android:layout_column="1"
        android:textColor="@android:color/background_dark" />

    <ToggleButton
        android:id="@+id/footPrint"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:textOn="Tall"
        android:textOff="Short"
        android:textSize="20sp"
        android:layout_row="2"
        android:textAllCaps="false"
        android:layout_column="1" />
    <ToggleButton
        android:id="@+id/shootHigh"
        android:textOn="High"
        android:textOff="No High"
        android:textAllCaps="false"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_row="3"
        android:layout_column="1" />

    <ToggleButton
        android:id="@+id/groundGear"
        android:textOn="Ground"
        android:textOff="No Ground Collect"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_row="6"
        android:layout_column="2" />

    <ToggleButton
        android:id="@+id/playerGear"
        android:textOn="Player"
        android:textOff="No Player Collect"
        android:textAllCaps="false"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:layout_row="6"
        android:layout_column="1" />

    <RadioGroup
        android:id="@+id/rope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1" >

        <RadioButton
            android:id="@+id/nylon"
            android:text="Nylon"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:textSize="20sp" />
        <RadioButton
            android:id="@+id/paracord"
            android:text="Paracord"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:textSize="20sp" />
        <RadioButton
            android:id="@+id/first"
            android:text="FIRST"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:textSize="20sp"   />

        <RadioButton
            android:id="@+id/velcro"
            android:text="Velcro"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Rope:"
        android:textSize="30sp"
        android:layout_row="4"
        android:layout_column="0"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textAlignment="textStart"
        android:text="Climbing:"
        android:textSize="30sp"
        android:layout_row="10"
        android:layout_column="0"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textAlignment="textStart"
        android:text="Ball:"
        android:textSize="30sp"
        android:layout_row="8"
        android:layout_column="0"
        android:textColor="@android:color/background_dark" />

    <ToggleButton
        android:id="@+id/canClimb"
        android:layout_height="50dp"
        android:textOn="Yes"
        android:textOff="No"
        android:textSize="20sp"
        android:layout_row="10"
        android:textAllCaps="false"
        android:layout_column="1"
        android:layout_width="130dp" />

    <ToggleButton
        android:id="@+id/hopperBall"
        android:textOn="Hopper"
        android:textOff="No Hopper"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_row="8"
        android:layout_column="1" />

    <ToggleButton
        android:id="@+id/groundBall"
        android:textOn="Ground"
        android:textOff="No Ground"
        android:textAllCaps="false"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:layout_row="8"
        android:layout_column="2" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Frame:"
        android:textSize="30sp"
        android:layout_row="5"
        android:layout_column="0"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/ballCapacity"
        android:inputType="number"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:hint="Ball Storage"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:textSize="30sp"
        android:layout_row="0"
        android:layout_column="0"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Email:"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/email"
        android:textSize="30sp"
        android:textColor="@android:color/background_dark"
        android:layout_row="11"
        android:layout_column="0"/>

    <EditText
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/enterEmail"
        android:layout_row="11"
        android:layout_column="1"
        android:hint="Email Address"
        android:textSize="25sp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Shooting:"
        android:textSize="30sp"
        android:layout_row="3"
        android:layout_column="0"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/takePhoto"
        android:text="Photo"
        android:textAllCaps="false"
        android:onClick="toPhoto"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_row="0"
        android:layout_column="2"/>

    <ToggleButton
        android:id="@+id/shootLow"
        android:textOn="Low"
        android:textOff="No Low"
        android:textAllCaps="false"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_row="3"
        android:layout_column="2" />

    <RadioGroup
        android:id="@+id/frameType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1">

        <RadioButton
            android:id="@+id/kitbot"
            android:text="Kit Bot"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/steel"
            android:text="Steel"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp" />

        <RadioButton
            android:text="Wood"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/aluminum"
            android:text="Aluminum"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:textSize="20sp" /></RadioGroup>

    <Button
        android:id="@+id/finishButton"
        android:text="Submit"
        android:textAllCaps="false"
        android:onClick="submit"
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_row="20"
        android:layout_column="2"/>

    <Button
        android:id="@+id/saveButton"
        android:text="Save"
        android:textAllCaps="false"
        android:onClick="saveFile"
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_row="20"
        android:layout_column="1"/>
</GridLayout>
