<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.elmhursts20.pitscoutingapp2017.SecondActivity">

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Weight:"
        android:textSize="30sp"
        android:layout_row="0"
        android:layout_column="0" />
    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Ball Capacity:"
        android:textSize="30sp"
        android:layout_row="1"
        android:layout_column="0" />
    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Footprint:"
        android:textSize="30sp"
        android:layout_row="2"
        android:layout_column="0" />
    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Shooting:"
        android:textSize="30sp"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Gear:"
        android:textSize="30sp"
        android:layout_row="6"
        android:layout_column="0" />
    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Ball:"
        android:textSize="30sp"
        android:layout_row="7"
        android:layout_column="0" />
    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="Climbing:"
        android:textSize="30sp"
        android:layout_row="8"
        android:layout_column="0" />

    <EditText
        android:id="@+id/robotWeight"
        android:inputType="number"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:hint="Robot Weight"
        android:layout_row="0"
        android:layout_column="1" />
    <EditText
        android:id="@+id/ballCapacity"
        android:inputType="number"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:hint="Ball Storage"
        android:layout_row="1"
        android:layout_column="1" />
    <ToggleButton
        android:id="@+id/footPrint"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textOn="Tall"
        android:textOff="Short"
        android:textSize="20sp"
        android:layout_row="2"
        android:textAllCaps="false"
        android:layout_column="1" />
    <ToggleButton
        android:id="@+id/shootHigh"
        android:textOn="High"
        android:textOff="No High"
        android:textAllCaps="false"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_row="3"
        android:layout_column="1" />
    <ToggleButton
        android:id="@+id/shootLow"
        android:textOn="Low"
        android:textOff="No Low"
        android:textAllCaps="false"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_row="3"
        android:layout_column="2" />

    <RadioGroup
        android:id="@+id/frameType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1">

        <RadioButton
            android:id="@+id/kitbot"
            android:text="Kit Bot"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:textSize="18sp" />
        <RadioButton
            android:id="@+id/steel"
            android:text="Steel"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:textSize="18sp" />
        <RadioButton
            android:text="Wood"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/aluminum"
            android:text="Aluminum"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:textSize="18sp" /></RadioGroup>

    <ToggleButton
        android:id="@+id/groundGear"
        android:textOn="Ground Colect"
        android:textOff="No Ground Collect"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_row="6"
        android:layout_column="2" />
    <ToggleButton
        android:id="@+id/playerBall"
        android:textOn="Player"
        android:textOff="No Player"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:layout_row="7"
        android:layout_column="1" />
    <ToggleButton
        android:id="@+id/groundBall"
        android:textOn="Ground"
        android:textOff="No Ground"
        android:textAllCaps="false"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:layout_row="7"
        android:layout_column="2" />

    <ToggleButton
        android:id="@+id/playerGear"
        android:textOn="Player"
        android:textOff="No Player Collect"
        android:textAllCaps="false"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="16sp"
        android:layout_row="6"
        android:layout_column="1" />

    <EditText
        android:id="@+id/rope"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:inputType="textPersonName"
        android:hint="Material"
        android:textSize="20sp"
        android:layout_row="4"
        android:layout_column="1" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Rope:"
        android:textSize="30sp"
        android:layout_row="4"
        android:layout_column="0" />

    <ToggleButton
        android:id="@+id/canClimb"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textOn="Yes"
        android:textOff="No"
        android:textSize="20sp"
        android:layout_row="8"
        android:textAllCaps="false"
        android:layout_column="1" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Frame:"
        android:textSize="30sp"
        android:layout_row="5"
        android:layout_column="0" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:text="(Defaults to default)"
        android:textSize="20sp"
        android:layout_row="4"
        android:layout_column="2"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/finishButton"
        android:text="Submit"
        android:textAllCaps="false"
        android:onClick="submit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_row="1"
        android:layout_column="3"/>

    <Button
        android:id="@+id/takePhoto"
        android:text="Photo"
        android:textAllCaps="false"
        android:onClick="toPhoto"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_row="2"
        android:layout_column="3"/>
</GridLayout>
